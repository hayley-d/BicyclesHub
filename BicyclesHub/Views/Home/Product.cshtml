@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title">
    <div class="product-container">
        <h1>@Model.Name</h1>
        <img src="@Model.ImageUrl" alt="@Model.Name" />
        <p>Brand: @Model.BrandName</p>
        <p>Category: @Model.CategoryName</p>
        <p>Model Year: @Model.ModelYear</p>
        <p>Price: @Model.ListPrice.ToString("C")</p>
        <p>Description: <!-- Add a description if available --></p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Products</a>
    </div>
</main>